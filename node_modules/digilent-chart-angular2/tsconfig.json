{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es2015",
            "dom"
        ],
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "declaration": true,
        "outDir": "./dist"
    },
    "files": [
        "src/digilent-chart.module.ts",
        "src/digilent-chart.component.ts",
        "src/digilent-chart.interface.ts"
    ],
    "angularCompilerOptions": {
        "genDir": "./dist",
        "skipMetadataEmit": false
    }
}